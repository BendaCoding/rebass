{
  "private": true,
  "repository": "https://github.com/rebassjs/rebass.git",
  "license": "MIT",
  "scripts": {
    "start": "yarn workspace rebassjs.org start",
    "prepare": "lerna run prepare",
    "test": "jest",
    "cover": "jest --coverage && npx codecov"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "jest": "^24.8.0",
    "jest-emotion": "^10.0.11",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.14.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6"
  },
  "jest": {
    "testMatch": [
      "**/packages/**/test/*.js"
    ],
    "collectCoverageFrom": [
      "**/packages/**/src/*.js"
    ],
    "setupFilesAfterEnv": [
      "jest-styled-components"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "bundlesize": [
    {
      "path": "./packages/rebass/dist/*.js",
      "maxSize": "1.5 kB"
    }
  ]
}
